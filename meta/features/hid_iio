config META_HID_IIO
	tristate "HID/IIO Sensors support"

	default m if META_DYSNOMIA

	select IIO
	select HID_SENSOR_HUB
	select HID_SENSOR_CUSTOM_SENSOR
	select HID_SENSOR_ACCEL_3D
	select HID_SENSOR_ALS
	select HID_SENSOR_GYRO_3D
	select HID_SENSOR_IIO_COMMON
	select HID_SENSOR_INCLINOMETER_3D
	select HID_SENSOR_MAGNETOMETER_3D
	select HID_SENSOR_DEVICE_ROTATION

	select 64BIT if META_DYSNOMIA
	select INTEL_ISH_HID if META_DYSNOMIA
	select INTEL_ISH_FIRMWARE_DOWNLOADER if META_DYSNOMIA
