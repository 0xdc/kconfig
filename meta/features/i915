config META_I915
	tristate "Intel i915 DRM graphics support"

	default m if META_KAVA || META_OAK || META_SOLANA || META_DYSNOMIA || META_SAMUS

	select DRM
	select DRM_I915
	select DRM_I915_GVT if 64BIT && (META_DYSNOMIA || META_SAMUS)
	select DRM_I915_GVT_KVMGT if 64BIT && (META_DYSNOMIA || META_SAMUS)
	imply KVM
	imply VFIO_MDEV
	imply VFIO_MDEV_DEVICE
